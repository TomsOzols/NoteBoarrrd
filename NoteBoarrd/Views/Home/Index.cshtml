@model NoteBoarrd.Models.UserPageViewModel
@using Resources.Res;
<div class="row"> 
    <div class="col-md-6">
        <h3>@WebResources.MyBoardsList</h3>
        <ul>
            @foreach (var item in Model.MyBoards)
            {
                <li>@Html.ActionLink(item.Name, "Index", "Board", new { id = item.Id }, new { })</li>
            }
            <li>@Html.ActionLink(WebResources.CreateNewBoard, "CreateBoard", "Hub")</li>
        </ul>
    </div>
    <div class="col-md-6">
        <h3>@WebResources.LatestBoardsVisited</h3>
        <ul>
            @if (Model.VisitedBoards.Count == 0)
            {
                <li>@WebResources.NoBoardsVisited</li>
                <li>@Html.ActionLink(WebResources.Hub, "Index", "Hub")</li>
            }
            @foreach (var item in Model.VisitedBoards)
            {
                <li>@Html.ActionLink(item.Name, "Index", "Board", new { id = item.Id }, new { })</li>
            }
        </ul>
    </div>
</div>